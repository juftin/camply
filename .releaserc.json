{
    "branches": [
        "main",
        "master",
        "next",
        "next-major",
        "+([0-9])?(.{+([0-9]),x}).x",
        {
            "name": "beta",
            "prerelease": true
        },
        {
            "name": "alpha",
            "prerelease": true
        }
    ],
    "plugins": [
        "semantic-release-gitmoji",
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "uv version ${nextRelease.version} && uv build"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": ["pyproject.toml", "uv.lock"],
                "message": "ðŸ”– camply ${nextRelease.version}\n\n${nextRelease.notes}\n[skip ci]"
            }
        ],
        [
            "@semantic-release/github",
            {
                "assets": [
                    {
                        "path": "dist/*.whl"
                    },
                    {
                        "path": "dist/*.tar.gz"
                    }
                ]
            }
        ]
    ]
}
